pipeline {
    agent any
    stages{
        stage('Git Checkout')
        steps {
        sh 'git clone https://github.com/iamnst19/Istio_EKS_Terraform.git'
        }
    }
        stage('Terraform Init'){
            steps{
                sh 'terraform init'
            }
        }
        stage('Terraform Apply'){
            steps{
                sh 'terraform apply --auto-approve'
            }
        }
      }
   }
