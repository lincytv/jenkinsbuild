pipeline {
    agent any
    stages{
        stage('Git Checkout'){
        steps {
        sh 'git clone https://github.com/iamnst19/Istio_EKS_Terraform.git'
          }
        }
        stage('Terraform Init'){
            steps{
                sh 'echo "Hello1"'
            }
        }
        stage('Terraform Apply'){
            steps{
                
                echo "${currentBuild.currentResult}"
            }
        }
    }
        post {
         success {
         echo "${currentBuild.currentResult}"
         }
        }
       
}
